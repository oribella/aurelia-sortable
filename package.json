{
  "name": "aurelia-sortable",
  "version": "0.3.1",
  "description": "",
  "license": "MIT",
  "author": "Christoffer Åström",
  "main": "dist/commonjs/index.js",
  "repository": {
    "type": "git",
    "url": "http://github.com/oribella/aurelia-sortable"
  },
  "scripts": {
    "version": "npm run changelog && git add CHANGELOG.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -r 0",
    "build": "npm run build:commonjs && npm run build:system && npm run build:amd",
    "build:commonjs": "babel src --out-dir dist/commonjs",
    "build:watch:commonjs": "babel src --out-dir dist/commonjs -w",
    "build:system": "babel src --modules system --out-dir dist/system",
    "build:watch:system": "babel src --modules system --out-dir dist/system -w",
    "build:amd": "babel src --modules amd --out-dir dist/amd",
    "build:watch:amd": "babel src --modules amd --out-dir dist/amd -w",
    "test": "mocha ./test --timeout 3000 --require ./test/global.js --compilers js:babel/register --timeout 5000",
    "test:watch": "mocha ./test --timeout 3000 --require ./test/global.js --compilers js:babel/register -w",
    "lint": "eslint src"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "chai": "^3.3.0",
    "conventional-changelog": "^0.5.1",
    "eslint": "^1.7.1",
    "jspm": "^0.16.12",
    "mocha": "^2.3.3",
    "sinon": "^1.17.1",
    "sinon-chai": "^2.8.0"
  },
  "jspm": {
    "main": "index",
    "format": "amd",
    "directories": {
      "lib": "dist/amd"
    },
    "dependencies": {
      "aurelia-dependency-injection": "npm:aurelia-dependency-injection@^1.0.0-beta.1",
      "aurelia-pal": "npm:aurelia-pal@^1.0.0-beta.1",
      "aurelia-templating": "npm:aurelia-templating@^1.0.0-beta.1",
      "oribella-default-gestures": "github:oribella/default-gestures@^0.2.0"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.6.4",
      "babel-runtime": "npm:babel-runtime@^5.6.4",
      "core-js": "npm:core-js@^1.2.6"
    }
  }
}
